{# Header #}
{% include 'header/base.twig' %}

{% block post %} 
	
	<div class="l-container">

		{% block start_wrapper %}{% endblock %}
		
		

		{% block header %}{% endblock %}


		{% block content %}

			<section class="row">
				<div class="col-xs-12 col-md-10 col-md-offset-1">
					<div class="font-light color-white margin-xs-top-64 margin-xs-bottom-64">
						{{ post.content }}
					</div>

				</div>
			</section> 

		{% endblock %}

		{% block footer %}{% endblock %}

		{% block end_wrapper %}{% endblock %}

	</div>
	
{% endblock %}


