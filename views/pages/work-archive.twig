{% extends 'index.twig' %}


{% block start_wrapper %}
	<div class="margin-xs-top-64 margin-xs-bottom-64">
{% endblock %}


{% block header %}
	{% include 'pages/_header.twig' with { 'title': 'Work, work, work' } %}
{% endblock %}


{% block content %}

	<section class="row">

		
		<div class="col-xs-12">
			
			{% for post in posts %}
			<div class="row margin-xs-top-32 margin-xs-bottom-32">
				<div class="col-xs-1 col-xs-offset-1 hidden-xs hidden-sm">
					
					<a class="js-to-work-single Work-archive__color" href="{{ post.link }}" style="background-color: {{ post.get_field( 'color' ) }}"  data-namespace="page" data-color="{{ post.get_field( 'color' ) }}">
						
					</a>

				</div>
				<div class="col-xs-12 col-md-9">
					<p class="color-white margin-xs-top-8 no-margin-bottom">
						<span class="font-medium">
							<a class="js-to-work-single" href="{{ post.link }}" data-namespace="page" data-color="{{ post.get_field( 'color' ) }}">{{ post.title }}</a>
							<sup class="hidden-xs valign-text-top opacity-40 font-size-13px uppercase letter-spacing-100 font-medium">
								{{ post.year|date( 'Y' ) }}
							</sup>
						</span>
						<br/>
						<span class="font-light">
							{% for role in post.get_field( 'role' ) %}
								{{ role.name }}{{ not loop.last ? ', ' }}
							{% endfor %}
						</span>
					</p>
				</div>
			</div>
			{% endfor %}

		</div>
		
	</section> 

{% endblock %}

{% block footer %}

	<footer class="row">
		<div class="col-xs-12 col-md-10 col-md-offset-1">
			<p class="color-white font-light">
				<small>	
					This <a class="font-medium" href="https://github.com/19h47/19h47.fr" target="_blank">website</a> is created with <a class="font-medium" href="https://wordpress.org/" target="_blank">WordPress</a>, <a class="font-medium" href="https://upstatement.com/timber/" target="_blank">Timber</a>, <a class="font-medium" href="http://barbajs.org/" target="_blank">Barba.js</a>. Typeface is <a class="font-medium" href="https://fonts.google.com/specimen/Work+Sans" target="_blank">Work Sans</a>.
				</small>
			</p>
		</div>
	</footer>

{% endblock %}
