<div class="Guid display-xs-none">
	<div class="l-container h-xs-100">
		<div class="row h-xs-100">

		{% for i in 1..12 %}
		    <div class="col-xs-1 text-xs-center h-xs-100">
				<div class="Guid__column">
					{{i}}
				</div>
			</div>
		{% endfor %}

		</div>
	</div>
</div>